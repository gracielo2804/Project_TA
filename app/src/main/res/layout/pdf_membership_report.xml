<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1500px"
    android:layout_height="2115px"
    tools:context=".ui.admin.AdminHomeActivity">

    <TextView
        android:id="@+id/txtJudulAppsReport"
        android:layout_width="1000px"
        android:layout_height="80px"
        android:layout_marginStart="64px"
        android:layout_marginTop="16px"
        android:text="HealthyFoods Application Report"
        android:textColor="@color/black"
        android:textSize="64px"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageLogoApps"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageLogoApps"
        android:layout_width="250px"
        android:layout_height="250px"
        android:src="@drawable/logo_apps"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/pemisahReportChart"
        android:layout_width="1500px"
        android:layout_height="16px"
        android:layout_marginVertical="4px"
        android:background="#f2f2f2"
        android:paddingHorizontal="-16dp"
        app:layout_constraintTop_toBottomOf="@id/imageLogoApps"/>

    <TextView
        android:id="@+id/reportMembershipSubscriptionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="172px"
        android:text="Membership Subscription Report"
        android:textColor="@color/black"
        android:textSize="48px"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageLogoApps"
        app:layout_constraintTop_toBottomOf="@id/txtJudulAppsReport" />


    <TextView
        android:id="@+id/reportMembershipSubscriptionDateReportMembership"
        android:layout_width="400px"
        android:layout_height="40px"
        android:layout_marginTop="4dp"
        android:layout_marginStart="320px"
        android:textAlignment="center"
        android:text="2022-05-01 - 2022-05-18"
        android:textColor="@color/black"
        android:textSize="32px"
        app:layout_constraintStart_toEndOf="@+id/imageLogoApps"
        app:layout_constraintTop_toBottomOf="@id/reportMembershipSubscriptionTitle" />


    <!--  <com.github.mikephil.charting.charts.HorizontalBarChart-->
    <!--      android:id="@+id/horizontalbarChart_view"-->
    <!--      android:layout_width="match_parent"-->
    <!--      android:layout_height="0dp"-->
    <!--      app:layout_constraintBottom_toBottomOf="parent"-->
    <!--      app:layout_constraintStart_toStartOf="parent"-->
    <!--      app:layout_constraintTop_toBottomOf="@id/headerAdminHome" />-->

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart_pdfMembership"
        android:layout_width="1500px"
        android:layout_height="1825px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pemisahReportChart" />

</androidx.constraintlayout.widget.ConstraintLayout>