<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.admin.AdminHomeActivity">

  <ProgressBar
      android:id="@+id/pbar_admin_home"
      android:visibility="invisible"
      android:layout_width="75dp"
      android:layout_height="75dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/headerAdminHome"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingVertical="16dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <ImageButton
        android:id="@+id/openMembershipMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@color/white"
        android:src="@drawable/menu_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/headerAdminHomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dashboard"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--    <com.google.android.material.button.MaterialButton-->
    <!--        android:id="@+id/btnTestPDF"-->
    <!--        style="@style/Widget.MaterialComponents.Button"-->
    <!--        android:backgroundTint="@color/colorPrimary"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:text="Make PDF test"-->
    <!--        android:paddingVertical="-16dp"-->
    <!--        app:cornerRadius="100dp"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent"-->

    <!--        />-->
    <ImageView
        android:id="@+id/imageviewadminshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"/>



  </androidx.constraintlayout.widget.ConstraintLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="5dp"
      android:background="@drawable/below_shadow"
      app:layout_constraintBottom_toBottomOf="@id/headerAdminHome"
      app:layout_constraintStart_toStartOf="parent" />

  <TextView
      android:id="@+id/reportMembershipSubscriptionTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:text="Membership Subscription Report"
      android:textColor="@color/black"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/headerAdminHome" />

  <TextView
      android:id="@+id/reportMembershipSubscriptionDate"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:text="All Time"
      android:textColor="@color/black"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/reportMembershipSubscriptionTitle" />

  <com.google.android.material.button.MaterialButton
      android:layout_marginTop="8dp"
      android:layout_marginEnd="8dp"
      android:id="@+id/btnSelectDateMembershipSubscriptionReport"
      style="@style/Widget.MaterialComponents.Button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:backgroundTint="@color/colorPrimary"
      android:text="Select Date"
      app:cornerRadius="100dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/headerAdminHome" />

  <View
      android:id="@+id/pemisahReportChart"
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:layout_marginHorizontal="16dp"
      android:layout_marginVertical="4dp"
      android:background="#f2f2f2"
      android:paddingHorizontal="-16dp"
      app:layout_constraintTop_toBottomOf="@id/btnSelectDateMembershipSubscriptionReport" />

  <!--  <com.github.mikephil.charting.charts.HorizontalBarChart-->
  <!--      android:id="@+id/horizontalbarChart_view"-->
  <!--      android:layout_width="match_parent"-->
  <!--      android:layout_height="0dp"-->
  <!--      app:layout_constraintBottom_toBottomOf="parent"-->
  <!--      app:layout_constraintStart_toStartOf="parent"-->
  <!--      app:layout_constraintTop_toBottomOf="@id/headerAdminHome" />-->

  <com.github.mikephil.charting.charts.BarChart
      android:id="@+id/barChart_view"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_marginTop="8dp"
      app:layout_constraintBottom_toTopOf="@id/admin_bottom_menu"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/pemisahReportChart"
      app:layout_constraintVertical_bias="1.0" />

  <de.codecrafters.tableview.SortableTableView xmlns:table="http://schemas.android.com/apk/res-auto"
      android:id="@+id/tableViewAdminHome"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintBottom_toTopOf="@id/admin_bottom_menu"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/pemisahReportChart"
      table:tableView_headerColor="@color/colorPrimary"
      table:tableView_columnCount="6" />

  <com.google.android.material.bottomnavigation.BottomNavigationView
      android:id="@+id/admin_bottom_menu"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:menu="@menu/bottom_admin" />

</androidx.constraintlayout.widget.ConstraintLayout>